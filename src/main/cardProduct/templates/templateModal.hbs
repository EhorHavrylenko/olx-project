<div class="card-backdrop">
  <div class="card-modal">
    <div class="card-image-list">
      {{#each imageUrls}}
      <div class="card-imgWrapper">
        <img class="card-image_main" src="{{this}}" alt="">
      </div>
      {{!-- <div class="card-imgWrapper">
        <img class="card-image_main" src="{{this}}" alt="">
      </div>
      <div class="card-imgWrapper">
        <img class="card-image_main" src="{{this}}" alt="">
      </div> --}}
      {{/each}}
    </div>
    <div class="card-description_wrapper">
      <div class="card-title-box">
        <h2 class="card-title">{{title}}</h2>
        <button class="card-close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <p class="card-code_product" data-id-product="{{_id}}">Код товара | {{_id}}</p>
      <p class="card-price">{{price}} &#8364;</p>

      <button class="card-infoBtn" data-userId="{{userId}}">Информация о продавце</button>


      <div class="card-add">
        <button class="card-favorites">
          В избранное
          <i class="fas fa-heart js-heard"></i>
        </button>

        <button class="card-share">
          Поделиться
          <i class="fas fa-share-alt"></i>
        </button>

      </div>
      <h3 class="card-title_text">Описание</h3>
      <p class="card-description">{{description}}</p>

    </div>

  </div>
</div>