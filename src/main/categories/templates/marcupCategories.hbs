<section class="section">
    <div class="container">
        {{#each this}}
        <div class="categories">
            <div class="title_categories_conteiner">
                <h2 class="title_categories">{{title}}</h2>
                <p class="linc_all_product"><a class="linc_product" href="" data-action={{title}}>Смотреть все</a></p>
            </div>

            <ul class="items_product swiper-container">
                <div class="swiper-wrapper">
                    {{#each products}}
                    <div class="swiper-slide">
                        <li class="item_product">
                            <a href="">
                                <div class="thumb">
                                    <img class="img_product" src="{{imageUrls}}" alt="{{description}}" />
                                </div>
                                <h3 class="title_product">{{title}}</h3>
                                <div class="price">
                                    <P class="old_price">{{price}} €</P>
                                    <P class="valid_price">{{price}} €</P>
                                </div>
                            </a>
                        </li>
                    </div>
                    {{/each}}
                </div>

                <div class="swiper-pagination"></div>

                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </ul>
        </div>
        {{/each}}
    </div>
</section>

<section class="section-btn">
    <div class="container-btn">
        <button type="button" class="btn" data-action="load-more"> Загрузить
            еще </button>
    </div>
</section>